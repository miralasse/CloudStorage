<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<?import javafx.scene.control.Label?>
<VBox fx:controller="com.cloud.client.MainController"
      xmlns:fx="http://javafx.com/fxml" alignment="center">

    <HBox>
        <VBox>
            <TableView fx:id="localFiles">
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                <placeholder>
                    <Label text="Your local storage is empty"/>
                </placeholder>
                <columns>
                    <TableColumn text="Local Storage" prefWidth="300">
                        <columns>
                            <TableColumn text="File" fx:id="localFileNameColumn" prefWidth="200"/>
                            <TableColumn text="Size" fx:id="localFileSizeColumn" prefWidth="100"/>
                        </columns>
                    </TableColumn>
                </columns>
            </TableView>

            <HBox>
                <Button text="Upload file" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#testFileSend"/>
                <Button text="Send Cmd" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#testCmd"/>
                <Button text="Refresh" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            </HBox>
        </VBox>

        <VBox>
            <TableView fx:id="cloudFiles">
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                <placeholder>
                    <Label text="Your cloud storage is empty"/>
                </placeholder>
                <columns>
                    <TableColumn text="Cloud Storage" prefWidth="300">
                        <columns>
                            <TableColumn text="File" fx:id="cloudFileNameColumn" prefWidth="200"/>
                            <TableColumn text="Size" fx:id="cloudFileSizeColumn" prefWidth="100"/>
                        </columns>
                    </TableColumn>
                </columns>
            </TableView>

            <HBox>
                <Button text="Download file" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                <Button text="Delete file" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                <Button text="Refresh" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            </HBox>
        </VBox>
    </HBox>

</VBox>