<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox fx:controller="com.cloud.client.MainController"
      xmlns:fx="http://javafx.com/fxml" alignment="center">

    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <placeholder>
            <Label text="Your cloud storage is empty"/>
        </placeholder>
        <columns>
            <TableColumn text="File" fx:id="fileNameColumn"/>
            <TableColumn text="Size" fx:id="fileSizeColumn"/>
        </columns>
    </TableView>

    <HBox>
        <Button text="Upload file" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#uploadFile">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@upload.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>


        <Button text="Download file" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#downloadFile">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@download.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button text="Rename file" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#renameFile">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@rename.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button text="Delete file" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#deleteFile">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@delete.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button text="Refresh" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#refreshFileList">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@refresh.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

</VBox>